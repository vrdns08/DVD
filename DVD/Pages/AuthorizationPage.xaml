<Page x:Class="DVD.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DVD.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800" Background="PeachPuff"
      Title="DVD">

    <Grid HorizontalAlignment="Center">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="DVD Shop"
            FontSize="50"
            VerticalAlignment="Center"
            Grid.Row="0"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            TextAlignment="Center"
            Foreground="Brown"
            FontWeight="Bold" 
                   Margin="10"
            />

        <TextBlock Text="Авторизация"
                   FontSize="33"
                   VerticalAlignment="Center"
                   Grid.Row="1"
                   Grid.Column="2"
                   Grid.ColumnSpan="2"
                   TextAlignment="Center"
                   Foreground="Purple"
                   FontWeight="Bold" 
                   Margin="10"
                   />
        <TextBlock Text="Логин"
            FontSize="17"
            Grid.Column="2"
            Grid.Row="2"       
            Grid.ColumnSpan="2"
            TextAlignment="Center"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
                   FontStyle="Italic"
                    />
        <TextBox x:Name="loginTb"
                 FontSize="22"
                 Grid.Column="2     "
                 Grid.Row="2"       
                 Grid.ColumnSpan="2"
                 Height="40"
                 VerticalAlignment="Center"
                 Padding="5"
                  />
        <TextBlock Text="Пароль"
    FontSize="17"
    Grid.Column="2"
    Grid.Row="3"       
    Grid.ColumnSpan="2"
    TextAlignment="Center"
    HorizontalAlignment="Center"
    VerticalAlignment="Top"
                   FontStyle="Italic"/>
        <TextBox x:Name="ParolTb"
                 FontSize="22"
                 Grid.Column="2"
                 Grid.Row="3"       
                 Grid.ColumnSpan="2"
                 Height="40"
                 VerticalAlignment="Center"
                 Padding="5"
                 />
        <Button x:Name="btnV" Grid.Column="2"
                Grid.Row="4"       
                Grid.ColumnSpan="2"
                 FontSize="22"
                Height="50" Content="Войти"
                FontFamily="Calibri"
                Background="Pink" Click="btnV_Click"/>
        <Button x:Name="btnZ" Grid.Column="2"
                Grid.Row="5"       
                Grid.ColumnSpan="2"
                 FontSize="18"
                 Height="50" 
                Content="Зарегистрироваться"
                Background="Azure"
                 FontFamily="Calibri"
                Click="btnZ_Click"/>
    </Grid>
</Page>
